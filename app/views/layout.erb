<!DOCTYPE html>
<html>
  <head>
    <title>Chitter!</title>
  </head>
  <body>
    <% if current_user %>
    <h1>Welcome <%=current_user.email%></h1>
    <div id='sign_out'>
      <form method='post' action='/sessions'>
        <input type='hidden' name='_method' value='delete'>
        <input type='submit' value='Sign out'>
      </form>
    </div>
    <% end %>
    <% if flash[:notice]%>
      <ul id='notice'>
        <%= flash[:notice] %>
      </ul>
    <% end %>
    <%= yield %>
  </body>
</html>
